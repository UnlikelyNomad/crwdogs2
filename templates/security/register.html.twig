{% extends 'base.html.twig' %}

{% import "forms/forms.html.twig" as forms %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container text-center mb-5">
            <p class="lead">Creating a CRW Dogs account allows you to use this site for organizing events, view and post to the forums, and use other services like planning housing and rides during events.</p>
        </div>

        {{ forms.item(form.email) }}
        {{ forms.item(form.nick) }}
        {{ forms.item(form.first_name) }}
        {{ forms.item(form.last_name) }}
        {{ forms.item(form.phone) }}
        {{ forms.item(form.location) }}

        <div class="row mt-5">
            <div class="col-sm-3"></div>
            <div class="col-sm-6 text-center mb-5">
                <button class="btn btn-lg btn-dark" type="submit">
                    Register
                </button>
            </div>
        </div>
    
    {{ form_end(form) }}
{% endblock %}
