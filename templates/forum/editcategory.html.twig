{% extends 'base.html.twig' %}

{% import "forms/forms.html.twig" as forms %}

{% block title %}New Category{% endblock %}

{% block body %}
    <div class="container pt-2">
        {% form_theme form 'forms/theme.html.twig' %}
        {{ form_start(form) }}

        {{ forms.item(form.name) }}
        {{ forms.item(form.description) }}
        {{ forms.item(form.sort) }}
        {{ forms.item(form.locked) }}
        {{ forms.item(form.roles_read, "height: auto; text-align: left;") }}
        {{ forms.item(form.roles_create, "height: auto; text-align: left;") }}
        {{ forms.item(form.roles_mod, "height: auto; text-align: left;") }}

        <div class="row mt-3">
            <div class="col-sm-3"></div>
            <div class="col-sm-6 text-center mb-5">
                <button class="btn btn-lg btn-dark" type="submit">
                    {{ label }}
                </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
